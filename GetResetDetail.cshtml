@model EmployeeManagement.Data.UserLogin
@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Get Detail</title>
</head>
<body>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="LogIn">LogIn Page</a></li>
            <li class="breadcrumb-item active" aria-current="page">Confirm Phone</li>
        </ol>
    </nav>
    <form asp-action="GetResetDetail" method="post">
        <div class="offset-md-4 col-md-4">
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger">@TempData["wrong"]</span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Next</button>
            </div>

        </div>
    </form>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>