@model EmployeeManagement.Data.Employee;
@{
    ViewData["Title"] = "Add Employee";
    Layout = null;
}
<title>@ViewData["Title"]</title>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<link href="~/css/addnewCSS.css" rel="stylesheet" />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="AdminHome">Admin Panel</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Employee</li>
    </ol>
</nav>
<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
    </div>
    <form asp-action="AddNew" asp-controller="Home" enctype="multipart/form-data" method="post">
        <h3>Add Employee</h3>
        <div class="row">
            <div class="col-md-6">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImgUrl" />
                <div class="form-group">
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name *" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Age" class="form-control" placeholder="Enter Age *" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Country" class="form-control" placeholder="Enter Country *" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Email" class="form-control" placeholder="Enter E-Mail *" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" name="btnSubmit" class="btnContact" value="Submit" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" asp-for="Salary" class="form-control" placeholder="Enter Salary *" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Phone" class="form-control" placeholder="Enter Phone Number *" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Technology" class="form-control" placeholder="Enter Technology *" />
                    <span asp-validation-for="Technology" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="file" name="ImgUrl" class="form-control" />
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a type="button" asp-action="AdminHome" asp-controller="Home" class="btn btnContact">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>